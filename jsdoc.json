{
    "tags": {
        "allowUnknownTags": false
    },
    "source": {
        "include": "src/Pelion.js",
        "includePattern": ".+\\.js(doc)?$",
        "excludePattern": "(^|\\/|\\\\)_",
        "exclude": ["node_modules", "test"]
    },
    "plugins": ["plugins/markdown"],
    "opts": {
        "encoding": "utf8",
        "destination": "docs/",
        "recurse": true,
        "verbose": true
    },
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false
    }
}
